<!-- 服务接入申请成功页面 -->
<template>
  <a-layout class="open-layout">
    <div class="body">
      <div class="successInfo">
        <a-icon type="check-circle" class="tip-icon" theme="filled" />
        <h2>提交成功</h2>
        <h5>请等待审核</h5>
        <a-button type="primary" class="skiopstep" @click="goManage">{{skiptime}}秒后 进入应用服务中心</a-button>
      </div>
    </div>
  </a-layout>
</template>

<script>
import {
  Layout,
  Button,
  Icon,
} from "ant-design-vue";
export default {
  data() {
    return {
      skiptime: 10,
      timer: null,
    };
  },
components: {
    ALayout : Layout,
    AButton: Button,
    AIcon: Icon,
},
created(){
     this.skiptime = 10;
    clearInterval(this.interval);
    this.interval = window.setInterval(createtime => {
      this.skiptime = this.skiptime - 1;
    }, 1000);
    this.timer = setTimeout(() => {
      this.$router.push({ path: "/dev/manage/app" ,query:{activeKey: "2"}});
    }, 10000);
  },
  methods: {
    goManage() {
      clearInterval(this.timer);
      window.clearInterval(this.interval);
      this.$router.push({ path: "/dev/manage/app" ,query:{activeKey: "2"}});
    }
  }
};
</script>
<style lang='less' scoped>
.open-layout {
  padding: 0 !important;
  height: 100%;
  .body {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    overflow-y: auto;
    background: #fff;

    .successInfo {
      margin: 0 auto;
      width: 200px;
      text-align: center;
      .tip-icon {
        font-size: 100px;
        color: #80c342;
      }
      .skiopstep {
        margin-right: 0px;
      }
    }
  }
}
</style>