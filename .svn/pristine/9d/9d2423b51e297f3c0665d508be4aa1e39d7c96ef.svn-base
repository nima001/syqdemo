/**
 * 省编办问题
 */
//编制资源分析（行政）
export function problems(data) {
    return request({
        url: '/person/sbb/problem',
        method: 'post',
        data
    })
}
export function problemCount(category) {
    return request({
        url: '/person/sbb/problem/count',
        method: 'post',
        params: {
            category: category
        }
    })
}

