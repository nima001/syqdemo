import request from '@/framework/utils/request'
/**
 * 省编办数据展示
 */
// 人员结构分析（行政）
export function personAnalyzeXz(district) {
    return request({
        url: '/person/sbb/personStructure/analyze/xz',
        method: 'get',
        params: {
            district: district
        }
    })
}

// 人员结构分析（事业）
export function personAnalyzeSy(district) {
    return request({
        url: '/person/sbb/personStructure/analyze/sy',
        method: 'get',
        params: {
            district: district,
        }
    })
}

