<template>
  <div class="form-panel">
    <div class="top">
      <div class="card" v-for="(item, index) in list" :key="index">
        <Card :src="src[index]" :title="item['title']" :num="item['num']" :key="index"></Card>
      </div>
    </div>
    <div class="bottom">
      <div class="title">周转编制列表</div>
      <div class="bottom_table">
        <a-table
          :columns="columns"
          :dataSource="dataSource"
          :pagination="false"
          >
        </a-table>
      </div>
    </div>
  </div>
</template>
<script>
import { Table } from "ant-design-vue";
import Card from '@/person-shaoxing/views/orgStaffReport/components/Card'
import { orgTempStaffReport } from '@/person-shaoxing/api/orgStaffReport'
import { showError } from '@framework/utils'

/**
 * 周转编制数监测
 */
export default {
  components: {
    ATable: Table,
    Card
  },
  props: {
    district: {
      type: String,
    }
  },
  data(){
    return {
      data: undefined,
      list: [
        { id: 0, title: "周转编制池", num: 0 },
        { id: 1, title: "已使用周转编制", num: 0 },
        { id: 2, title: "剩余周转编制", num: 0 },
        { id: 3, title: "本年度将回收周转编制", num: 0 },
      ],
      src:["icon_report_blue", "icon_report_hourgalass", "icon_report_smile", "icon_report_info"],
      columns: [
        { title: '单位', dataIndex: 'org', key: 'org', width: '20%' },
        { title: '主管部门', dataIndex: 'department', key: 'department', width: '20%' },
        { title: '开始时间', dataIndex: 'starttime', key: 'starttime', width: '20%' },
        { title: '回收时间', dataIndex: 'endtime', key: 'endtime', width: '20%' },
        { title: '周转编制数', dataIndex: 'turnovernum', key: 'turnovernum', align: 'center', width: '20%' },
      ],
      dataSource: [],
    }
  },
  computed: {
  },
  watch: {
    district: {
      immediate: true,
      handler(val) {
        this.loadData(val);
        return val;
      }
    },
    dataSource:{
      immediate: true,
      handler(val) {
        if(val.length) {
          this.list[1]['num'] = val.reduce((total, currentVal)=>{
            if(typeof total === 'object') {
              return total.turnovernum + currentVal.turnovernum;
            }else{
              return total + currentVal.turnovernum;
            }
          });
        }else{
          this.list[1]['num'] = 0;
        }
        return val;
      }
    }
  },
  created(){
  },
  methods: {
    loadData(val) {
      if(val==='330600') {
        this.dataSource = [
          { org: '绍兴市卫生健康行政执法队', department: '绍兴市卫生健康委员会', starttime: '2020/4/27', endtime: '2022/4/27', turnovernum: 2, },
          { org: '绍兴市统计数据中心', department: '绍兴市统计局', starttime: '2020/7/28', endtime: '2022/7/28', turnovernum: 1, },
          { org: '绍兴市农业农村局', department: '绍兴市农业农村局', starttime: '2020/7/28', endtime: '2022/7/28', turnovernum: 1, },
          { org: '绍兴市生态环境局', department: '绍兴市生态环境局', starttime: '2020/7/28', endtime: '2022/7/28', turnovernum: 1, },
          { org: '绍兴市妇女联合会机关', department: '绍兴市妇女联合会机关', starttime: '2020/7/28', endtime: '2022/7/28', turnovernum: 1, },
        ];
      }else if(val==='330681') {
        this.dataSource = [
          { org: '诸暨市农村经营管理总站', department: '诸暨市农业农村局', starttime: '2020/4/14', endtime: '2022/4/14', turnovernum: 1, },
          { org: '诸暨市传统产业服务中心', department: '诸暨市经济和信息化局', starttime: '2020/4/14', endtime: '2022/4/14', turnovernum: 1, },
        ];
      }else{
        this.dataSource = [];
      }
    }
  }
}
</script>
<style lang="less" scoped>
.form-panel{
  .top{
    display: flex;
    padding: 15px 186px 24px 192px;
    justify-content: space-between;
    .card{
      // &:nth-child(1){
      //   margin
      // }
    }
  }
  .bottom{
    padding: 24px 0 10px 0;
    .title{
      font-weight: bold;
      line-height: 30px;
      margin-bottom: 30px;
    }
    .bottom_table{

    }
  }
}
</style>