<template>
  <div>
    <a-form-item v-if="edit" 
      :label="property.label"
      :required="!!property.require" 
      :validateStatus="validateStatus">
      <a-date-picker style="width:100%"
        :disabled="!!property.disable"
        v-model="propValue"
        @change="onChange"
      />
    </a-form-item>
    <div v-else class="p-showname">
      <span>{{property.label}}：</span>
      <span>{{propValue && propValue.format("YYYY-MM-DD")}}</span>
    </div>
  </div>
</template>
<script>
import { Form, DatePicker } from "ant-design-vue";
import moment from "moment";
import get from 'lodash/get';
import set from 'lodash/set';

export default {
  props: {
    property: {
      type: Object,
    },
    data:{
      type: Object,
    },
    edit:{
      type: Boolean,
      default: false,
    }
  },
  components: {
    AFormItem: Form.Item,
    ADatePicker: DatePicker
  },
  data() {
    return {
      code: this.property['code'],
      validateStatus: undefined,
    };
  },
  computed: {
    propValue:{
      get(){
        let d = get(this.data, this.code);
        return d && moment(d);
      },
      set(value){
        set(this.data, this.code, value)
      }
    }
  },
  methods: {
    validateField(obj){
      return new Promise((resolve, reject) => {
        this.validate((status) => {
          if(status == 'error'){
            reject();
          }else{
            if(status == 'success'){
               set(obj, this.code, this.propValue)
            }
            resolve();
          }
        })
      });
    },
    validate(callback){
      let status = undefined;//error 验证失败 success成功
      if(!this.property.disable){
        //TODO 数据格式校验
        if(this.property.require && !this.propValue){
          status = 'error';
        }else{
          status = 'success';
        }
      }
      this.validateStatus = status;
      if(callback){
        callback(status);
      }
    },
    onChange(){
      this.validate();
    }
  }
};
</script>
<style lang="less" scoped>
.ant-form-item {
  margin-bottom: 0;
}
.p-showname {
  line-height: 30px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
</style>