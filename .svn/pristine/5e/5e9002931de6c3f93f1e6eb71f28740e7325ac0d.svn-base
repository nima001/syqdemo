<template>
  <div class="list-hitory">
    <div class="main">
      <div class="main-table">
        <a-table
          class="antd-table-con"
          rowKey="id"
          :columns="columns"
          :dataSource="tableData"
          :pagination="false"
          :loading="loading"
          >
          <span slot="operation" class="operation" slot-scope="text, record">
            <a @click="onShowDetail(record.id)">查看详情</a>
            <a @click="onDelete(record.id)">删除</a>
          </span>
        </a-table>
        <div class="footer">
          <a-pagination
            v-if="tableData && tableData.length"
            showSizeChanger
            :showTotal="total => `总共：${total}条`"
            @showSizeChange="onShowSizeChange"
            :total="pagination.total"
            :pageSize="pagination.pagesize"
            v-model="pagination.pagenum"
            @change="onPageChange"
          />
        </div>
      </div>
    </div>
  </div>
</template>

<script>
import { Row, Col, Input, Table, Pagination, Button, Modal, Spin } from "ant-design-vue";
import { listHistory, deleteHistory } from "@/person-shaoxing/api/assessment";
import { showError } from "@/framework/utils/index";
export default {
  props: {},
  components: {
    ARow: Row,
    ACol: Col,
    AInput: Input,
    ATable: Table,
    AButton: Button,
    APagination: Pagination,
    AModal: Modal,
    ASpin: Spin,
  },
  data() {
    return {
      loading: false,
      columns: [
        { title: '序号', customRender: (text, record, index) => ((this.pagination.pagenum - 1)*this.pagination.pagesize) + (index + 1), width: '5%' },
        { title: '评估内容', dataIndex: 'content', width: '25%' },
        { title: '机构名称', dataIndex: 'orgname', width: '25%' },
        { title: '评估时间', dataIndex: 'assesstime', customRender: (text) => (text && text.substr(0, 10)), width: '25%' },
        { title: '操作', scopedSlots: { customRender: "operation" }, width: '20%' }
      ],
      tableData: [],
      pagination: {
        total: 0,
        pagenum: 1,
        pagesize: 10
      },
    };
  },
  watch: {},
  computed: {},
  created() {
    this.getData({ pagenum: 1, pagesize: this.pagination.pagesize });
  },
  mounted() {},
  methods: {
    getData(page) {
      this.loading = true;
      let params = {
        ...page,
        reportid: this.$route.query.reportid,
        needtotal: true
      }
      listHistory(params)
      .then(({result}) => {
        this.loading = false;
        this.pagination = result;
        this.tableData = result.rows;
      })
      .catch(err => {
        this.loading = false;
        showError(err);
      })
    },
    onShowSizeChange(pagenum, pagesize) {
      this.getData({ pagenum: 1, pagesize });
    },
    onPageChange(pagenum, pagesize) {
      this.getData({ pagenum, pagesize });
    },
    onShowDetail(id) {
      this.$router.push({
        path: '/person/assessment/compileassist/detail',
        query: {
          id,
          isHistory: 1
        }
      })
    },
    onDelete(id) {
      if(id) {
        let that = this;
        that.$confirm({
          title: "确认删除评估项?",
          onOk() {
            deleteHistory(id)
              .then(res => {
                that.$notification.success({
                  message: "提示",
                  description: "删除历史记录成功!",
                  duration: 3
                });
                that.getData({ pagenum: that.pagination.pagenum, pagesize: that.pagination.pagesize });
              })
              .catch(error => {
                showError(error);
              });
          },
          onCancel() {}
        });
      }
    }
  },
};
</script>
<style lang="less" scoped>
.list-hitory{
    padding: 10px;
  height: 100%;
  .main{
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    overflow: hidden;
    background: @white;
    height: 100%;
    .main-table{
      margin-top: 10px;
      flex-shrink: 1;
      overflow-y: auto;
      .antd-table-con{
        padding: @content-padding-v @content-padding-h;
        .operation {
          a {
            margin-right: 15px;
            &:hover {
              text-decoration: underline;
            }
          }
        }  
      }
      .footer {
        display: flex;
        justify-content: flex-end;
        padding: 12px @content-padding-h;
      }
    }
  }
}
</style>