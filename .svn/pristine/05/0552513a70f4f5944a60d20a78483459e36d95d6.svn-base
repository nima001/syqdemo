<template>
  <div class="wrap">
    <p class="title">实有机构分布情况</p>
    <div class="spotList">
      <div class="spotItem">
        <span class="spot"></span>
        <span class="text">党政机构</span>
      </div>
      <div class="spotItem">
        <span class="spot"></span>
        <span class="text">事业单位</span>
      </div>
    </div>
    <div class="swiperView">
      <div class="swiperWrap">
        <div class="swiperContent">
          <swiper :size="3">
            <template v-for="(item,index) in formatList" :slot="'swiper'+`${index}`">
              <div class="capsuleList" v-for="(lg,idx) in item" :key="idx">
                <capsule-group :target="lg" :maxNum="220"></capsule-group>
              </div>
            </template>
          </swiper>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
import CapsuleGroup from "./CapsuleGroup";
import Swiper from "../components/Swiper";
export default {
  components: {
    CapsuleGroup,
    Swiper
  },
  data() {
    return {
      width: undefined,
      list: [
        { name: "党委", dzjg: 220, sydw: 150 },
        { name: "人大", dzjg: 180, sydw: 120 },
        { name: "政府", dzjg: 140, sydw: 135 },
        { name: "政协", dzjg: 150, sydw: 99 },
        { name: "法院", dzjg: 99, sydw: 200 },
        { name: "检察院", dzjg: 145, sydw: 120 },
        { name: "街道", dzjg: 189, sydw: 88 },
        { name: "乡镇", dzjg: 202, sydw: 188 },
        { name: "其它", dzjg: 140, sydw: 205 }
      ]
    };
  },
  computed: {
    formatList() {
      return this.sliceArr(this.list, 4);
    }
  },
  methods: {
    sliceArr(arr, length) {
      let productData = [];
      let num = Math.ceil(arr.length / length);
      for (let i = 0; i < num; i++) {
        productData.push(arr.slice(i * length, i * length + length));
      }
      return productData;
    }
  }
};
</script>
<style lang='less' scoped>
.wrap {
