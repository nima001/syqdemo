                  <span class="num">{{item.total}}</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </dialog-box>
  </div>
</template>
<script>
import DialogBox from "../components/DialogBox";
import LcdFont from "../components/LcdFont";

export default {
  components: {
    DialogBox,
    LcdFont,
  },
  props: {
    value: Boolean,
    title: String,
    kbNum: Number,
    numDesc: Number,
    total: Number,
    used: Number,
    data: {
      type: Object,
      default: ()=> {
        return {};
      }
    }
  },
  data() {
    return {
      show: this.value,
      showList: false,
      dataTable: {
        keyCols: [{ column: "k0", key: "district", showname: "所在地区" }],
        rows: [
          { k0: "党委", v0: 18 },
          { k0: "人大", v0: 0 },
          { k0: "政府", v0: 0 },
          { k0: "政协", v0: 0 },
          { k0: "民主党派", v0: 0 },
          { k0: "群众团体", v0: 0 },
          { k0: "法院", v0: 0 },
          { k0: "检察院", v0: 0 },
          { k0: "街道", v0: 0 },
          { k0: "乡", v0: 0 },
          { k0: "政", v0: 0 },
        ],
        valueCols: [{ column: "v0", showname: "记录数" }],
      },
    };
  },
  watch: {
    value(value) {
      this.show = value;
    },
    show(show) {
      this.$emit("input", show);
    },
  },
  methods: {},
};
</script>
