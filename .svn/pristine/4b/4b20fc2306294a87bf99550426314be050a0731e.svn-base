<template>
  <div class="form-panel">
    <div class="top_card">
      <div class="card" v-for="(item, index) in list" :key="index">
        <div class="title">{{item.title}}</div>
        <proportion 
          :totalText="item.totalText" 
          :total="data[item.total]" 
          :numText="item.numText" 
          :num="data[item.num]" 
          :surplusText="item.surplusText" 
          :overNum="item.overNum"
          :cardtype="item.type"
          class="content"
        />
      </div>
    </div>
    <div class="bottom_table">
      <div class="table_container">
        <p class="title">序列行政编制分布明细表——核定籍贯编制</p>
        <a-table
          :columns="columns"
          :dataSource="dataSource"
          :pagination="false"
          >
        </a-table>
      </div>
      <div class="table_container">
        <p class="title">序列行政编制分布明细表——核定籍贯编制</p>
        <a-table
          :columns="columns"
          :dataSource="dataSource"
          :pagination="false"
          >
        </a-table>
      </div>
    </div>
  </div>
</template>
<script>
import { Table } from "ant-design-vue";
import Proportion from './Proportion'
import { orgOverStaffReport } from '@/person-shaoxing/api/orgStaffReport'
import { showError } from '@framework/utils'

/**
 * 机构编制数监测
 */
export default {
  name: 'StaffReport',
  components: {
    ATable: Table,
    Proportion
  },
  props: {
    district: {
      type: String,
    },
    orgCount: {
      type: Object
    }
  },
  data(){
    return {
      data: {},
      cardList: [
        { title: '省定行政编制', total: 'zgbzzl', totalText: '省定限额', num: 'jghdbzs', numText: '核定', surplusText: '待分配数' },
        { title: '省定事业编制', total: 'sybzzl', totalText: '省定限额', num: 'syhdbzs', numText: '核定', surplusText: '待分配数' },
        { title: '核定机关编制', total: 'jghdbzs', totalText: '核定', num: 'jgbzsyzj', numText: '实有', surplusText: '超空编数' },
        { title: '省定事业（含报备员额）编制', total: 'syhdbzs', totalText: '核定', num: 'sybzsys', numText: '实有', surplusText: '超空编数' },
      ],
      numList: [
        { title: '行政编制超编机构数', overNum: 0, type: 'num' },
        { title: '事业编制超编机构数', overNum: 0, type: 'num' },
      ],
      columns: [
        { title: 'Age', dataIndex: 'age', key: 'age', },
        { title: 'Name', dataIndex: 'name', key: 'name', },
      ],
      dataSource: [
        { key: '1', name: 'John Brown', age: 32, },
        { key: '2', name: 'John Brown', age: 32, },
        { key: '3', name: 'John Brown', age: 32, },
        { key: '4', name: 'John Brown', age: 32, },
        { key: '5', name: 'John Brown', age: 32, },
        { key: '6', name: 'John Brown', age: 32, },
        { key: '7', name: 'John Brown', age: 32, },
      ]
    }
  },
  computed: {
    list: {
      get() {
        this.numList.forEach(item => {
          item.overNum = this.orgCount[item.title] ? this.orgCount[item.title] : 0;
        })
        return this.cardList.concat(this.numList);
      },
      set() {
        this.numList.forEach(item => {
          item.overNum = this.orgCount[item.title] ? this.orgCount[item.title] : 0;
        })
        return this.cardList.concat(this.numList);
      }
    }
  },
  watch: {
    district(district){
      this.loadData(district);
    },
  },
  created(){
    this.loadData(this.district);
  },
  methods: {
    loadData(district) {
      console.log('staff来了');
      orgOverStaffReport(district)
      .then(({result}) => {
        this.data = result;
      })
      .catch(err => {
        showError(err);
      })
    }
  }
}
</script>
<style lang="less" scoped>
.form-panel{
  width: 100%;
  > div{
    display: flex;
    justify-content: space-between;
  }
  .top_card{
    .card{
      width: 200px;
      border: 1px solid @border-color-split;
      border-radius: 5px;
      .title{
        white-space: nowrap;
        overflow: hidden;
        line-height: 50px;
        text-align: center;
        font-weight: bold;
        border-bottom: 1px solid @border-color-split;
      }
      .content{
        margin-top: 10px;
        padding: 10px 0;
      }
    }
  }
  .bottom_table{
    margin-top: @padding-lg;
    .table_container{
      width: 50%;
      border: 1px solid #e8e8e8;
      border-radius: 5px;
      &:nth-child(2){
        margin-left: 32px;
      }
      .title{
        font-weight: bold;
        line-height: 45px;
        margin: 0;
        text-indent: 1em;
      }
      .ant-table-wrapper{
        margin: 10px;
      }
    }
  }
}
</style>