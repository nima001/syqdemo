/**
 * html转换成pdf并下载
 * @param {*} htmlSheet {title, createTitle, newPager, pagerSize, rotate, margins, html, children}
 * @param {Boolean} isbook 
 */
export function convertHtml2Pdf(htmlSheet, isbook) {
    return request({
		url: `/file/v1/htmlconvert/pdf?isbook=${isbook?1:0}`,
		method: 'post',
		data: htmlSheet
	}).then(({result}) => {
        return loopTaskResult(result);
    }).then((uri) => {
        download(uri);
    });
}

/**
 * html转换成pdf并下载
