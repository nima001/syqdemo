<template>
  <div class="policy-server">
    <a-row :gutter="20" class="title">
      <a-col :span="24">
        新增职责：{{data.duty}}
      </a-col>
    </a-row>
    <a-row :gutter="20" class="title">
      <a-col :span="24">
        相关政府购买服务范围：
      </a-col>
    </a-row>
    <a-row class="title" :gutter="20">
      <a-col :span="24" v-html="scope">
      </a-col>
    </a-row>
  </div>
</template>

<script>
/*
**新增职责和是否已纳入政府购买服务范围
*/
import { Input, Row, Col } from "ant-design-vue"
import { createReportItem } from "@/person-shaoxing/utils/index"
export default {
  props: {
    data: Object
  },
  components: { ATextarea: Input.TextArea, ARow: Row, ACol: Col },
  data() {
    return {
      scope: undefined
    };
  },
  watch: {},
  computed: {
  },
  created() {
    this.scope = this.data.scope ? this.data.scope.replace(/\n/g,'<br/>') : '';
  },
  mounted() {
  },
  methods: {
    getHtml() {
      let text = `<p>新增职责：${this.data.duty}</p><p>相关政府购买服务范围：${this.scope}</p>`
      return createReportItem(text, '关联情况分析')
    }
  },
};
</script>
<style lang="less" scoped>
.policy-server{
  .title{
    padding: @content-padding-v 0;
  }
}
</style>