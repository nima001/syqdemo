<template>
  <div class="form-panel">
    <div class="top">
      <div class="left">
        <div class="title">近五年预计退休人数预测</div>
        <a-spin :spinning="loading" class="chart">
          <area-chart :dataTable="chartData"></area-chart>
        </a-spin>
      </div>
      <div class="center">
        <div class="center_con">
          <div class="tip">未及时办理退休</div>
          <div class="num">
            <span>{{errorNum}}</span>
            <span>人</span>
          </div>
        </div>
      </div>
      <div class="right">
        <div class="title">未按时退休人数</div>
        <div class="bottom_table">
          <a-table
            :columns="columns"
            :dataSource="dataSource"
            :pagination="false"
            >
          </a-table>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="title">序列退休人员分布明细表</div>
      <div class="bottom_table">
        <a-table
          :columns="columns"
          :dataSource="dataSource"
          :pagination="false"
          >
        </a-table>
      </div>
    </div>
  </div>
</template>
<script>
import { Table, Spin } from "ant-design-vue";
import { components } from '@person/components/chart'
import { orgRetireReport, orgRetireErrorReport } from '@/person-shaoxing/api/orgStaffReport'
import { showError } from '@framework/utils'

/**
 * 退休人数监测
 */
export default {
  name: 'RetireReport',
  components: {
    ATable: Table,
    ASpin: Spin,
    ...components
  },
  props: {
    district: {
      type: String,
    }
  },
  data(){
    return {
      loading: false,
      errorNum: undefined,
      chartData: undefined,
      columns: [
        { title: 'Age', dataIndex: 'age', key: 'age', },
        { title: 'Name', dataIndex: 'name', key: 'name', },
      ],
      dataSource: [
        { key: '1', name: 'John Brown', age: 32, },
        { key: '2', name: 'John Brown', age: 32, },
        { key: '3', name: 'John Brown', age: 32, },
        { key: '4', name: 'John Brown', age: 32, },
        { key: '5', name: 'John Brown', age: 32, },
        { key: '6', name: 'John Brown', age: 32, },
        { key: '7', name: 'John Brown', age: 32, },
      ]
    }
  },
  computed: {},
  watch: {
    district(district) {
      this.loadData(district);
      this.loadErrorData(district);
    }
  },
  created(){
    this.loadData(this.district);
    this.loadErrorData(this.district);
  },
  mounted() {},
  methods: {
    loadData(district) {
      this.loading = true;
      orgRetireReport(district)
      .then(({result}) => {
        this.chartData = result;
      })
      .catch(err => {
        showError(err);
      })
      .finally(() => { this.loading = false; })
    }, 
    loadErrorData(district) {
      orgRetireErrorReport(district)
      .then(({result}) => {
        this.errorNum = result;
      })
      .catch(err => {
        showError(err);
      })
    }
  }
}
</script>
<style lang="less" scoped>
.form-panel{
  .top{
    display: flex;
    padding-bottom: @padding-lg;
    justify-content: space-between;
    > div{
      .title{
        font-weight: bold;
        line-height: 30px;
        margin-bottom: 20px;
      }
    }
    .left{
      width: 550px;
      .ant-spin-nested-loading{
        height: 270px;
      }
    }
    .center{
      width: 176px;
      .center_con{
        margin-top: 51px;
        height: 267px;
        background-image: url('../../../assets/img/report_retire.png');
        background-size: cover;
        border-radius: 5px;
        color: #fff;
        .tip{
          text-align: center;
          font-size: 20px;
          line-height: 72px;
        }
        .num{
          text-indent: 2em;
          span{
            &:nth-child(1){
              font-size: 40px;
            }
          }
        }
      }
    }
    .right{
      width: 580px;
    }
  }
  .bottom{
    margin-top: @padding-lg;
    .title{
      font-weight: bold;
      line-height: 30px;
      margin-bottom: 10px;
    }
  }
}
</style>