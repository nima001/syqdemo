<template>
  <div class="proportion">
    <a-progress type="circle" :percent="percent" :format="() => '问题类型'" />
    <div class="footer">
      <div class="top">
        <span class="text">外部问题</span>
        <span class="num">{{ outsideNum ? outsideNum : 0 }}</span>
      </div>
      <div class="bottom">
        <span class="text">内部问题</span>
        <span class="num">{{ insideNum ? insideNum : 0 }}</span>
      </div>
    </div>
  </div>
</template>
<script>
import { Progress } from "ant-design-vue";

/**
 * 占比显示
 */
export default {
  components: {
    AProgress: Progress,
  },
  props: {
    outsideNum: Number,
    insideNum: Number,
    cardtype: {
      type: String,
      default: "card",
    },

    numText: String,
    overNum: Number,
    surplusText: String,
  },
  computed: {
    percent() {
      if (this.outsideNum > 0 && this.insideNum > 0) {
        return (this.insideNum / (this.outsideNum + this.insideNum)) * 100;
      }
    },
  },
};
</script>
