<template>
  <!--液晶字体-->
  <div class="lcdfont">
    <span class="fake" :style="fakeStyle">{{fakeNum}}</span>
    <span class="real" :style="realStyle">{{formateNumber}}</span>
  </div>
</template>

<script>
export default {
  props: {
    // 液晶字体长度
    length: {
      type: Number,
      required: true
    },
    // 液晶字体数值
    realNumber: {
      type: Number,
      require: true
    },
    // 底色样式
    fakeStyle: {
      type: Object,
      default: () => {
        return {};
      }
    },
    // 液晶字体样式
    realStyle: {
      type: Object,
      default: () => {
        return {};
      }
    },
    // 是否必须 >= 0
    thanZero: {
      type: Boolean
    }
  },
  computed: {
    fakeNum() {
      let str = "";
      for (let i = 0; i < this.length; i++) {
        str += "0";
      }
      return str;
    },
    formateNumber() {
      if (this.thanZero && this.realNumber &&  this.realNumber < 0) {
        return 0;
      } else {
        return this.realNumber || 0;
      }
    }
  }
};
</script>
<style lang='less' scoped>
@font-face {
  font-family: LESLIEB;
  src: url("../img/LESLIEB_.TTF") format("truetype");
}
.lcdfont {
  position: relative;
  display: inline-flex;
  span {
    font-family: LESLIEB;
    height: 48px;
    font-size: 48px;
    font-weight: 400;
    line-height: 48px;
    opacity: 1;
  }
  .fake {
    color: #343434;
  }
  .real {
    color: #8fc7ff;
    opacity: 1;
    position: absolute;
    width: 100%;
    height: 100%;
    text-align: right;
    left: 0px;
    top: 0px;
  }
}
</style>