<script>
import { Tooltip } from 'ant-design-vue';
import OrgList  from '../components/OrgList';
import DialogBox from "../components/DialogBox";
import LcdFont from "../components/LcdFont";
import { includes } from 'lodash';
import { query } from "@/person/api/integratedquery";
import { showError } from "@/framework/utils/index";

export default {
  components: {
    DialogBox,
    LcdFont,
    OrgList,
    ATooltip: Tooltip,
  },
  props: {
    districtCode: String,
    showAge: Boolean,
    title: String,
    data: {
      type: Object,
      default: ()=> {
        return {}
      }
    },
    type: String,
  },
  data() {
    return {
      ageList: false,
      show: this.value,
      showOrgs: false,
      dataList: [],
      query: {
        target: { id: 1, title: "组织", catalogid: 57 },
        fields: [
          {
            datasource: "",
            datatype: 4,
            icon: "string",
            inputtype: 0,
            key: "name",
            name: "机构名称",
            required: false,
            showname: "机构名称",
            sort: "机构基本信息",
          },
          {
            datatype: 4,
            icon: "string",
            inputtype: 0,
            joinable: false,
            key: "orgcode",
            name: "机构编码",
            required: false,
            showname: "机构编码",
            sort: "机构基本信息",
            title: "机构<span class=\"key\">编码</span>",
          },
          {
            datatype: 4,
            icon: "float",
            inputtype: 2,
            key: "_id@organization.statistic.jgpjnl",
            name: "机构平均年龄",
            required: false,
            showname: "机构平均年龄",
            sort: "平均年龄",
            title: "<span class=\"key\">机构平均年龄</span>",
          },
        ],
        filter: {
          op: 'and',
          criteria: [{
            field: {
              datasource: "usermanage.org.unittype",
              datatype: 2,
              icon: "dict",
              inputtype: 0,
              joinable: false,
              key: "unittypes",
              name: "单位类型",
              required: false,
              showname: "单位类型",
              sort: "机构基本信息",
              title: "<span class=\"key\">单位</span>类型",
            },
            id: "roehi",
            op: "eq",
            value: undefined,
            opList: [
              {text: "等于", value: "eq"},
              {text: "不等于", value: "ne"},
              {text: "在列表中", value: "in"},
              {text: "不在列表中", value: "nin"},
            ]
          }],
        },
        nodename: undefined,
      },
    };
  },
  watch: {
    showAge(value) {
      this.show = value;
    },
    show(show) {
      if(!show) {
        this.$emit('update:showAge', show);
      }
    },
    type(val) {
      if(val) {
        this.loadData();
      }
    }
  },
  computed: {
    unittype() {
      let v = this.$store.getters.dict('usermanage.org.unittype');
      return v;
    }
  },
  mounted() {
    this.ageList = false;
    if(this.type) {
      this.loadData();
    }
  },
  methods: {
    showAges() {
      this.showOrgs = true;
    },
    loadData() {
      let v = this.$store.getters.dictKey('usermanage.org.district', this.districtCode);
      this.query.nodename = v.text;
      let values = this.unittype.filter((item)=>includes(item.text,this.type));
      this.$set(this.query.filter.criteria[0],'value',values[0].value);
      query({...this.query,pagesize: 10, pagenum: 1}).then(({result})=>{
        this.dataList = result.rows;
      }).catch((err)=>{
        showError(err);
      })
    }
  },
};
</script>
