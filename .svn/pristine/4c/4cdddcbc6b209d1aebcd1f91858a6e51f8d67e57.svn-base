/*报表模板 模板指令的css*/
/* 数据绑定 */
span[bind],a[bind]{
    background-color: rgba(255, 145, 0, 0.8);;
    cursor: default;
}
span[bind]:hover,a[bind]:hover{
    background-color: rgba(255, 145, 0, 0.6);
}
span[bind]::before,a[bind]::before{
    content: '{';
}
span[bind]::after,a[bind]::after{
    content: '}';
}

/* 表头 */
table thead td,table thead th{
    background-color: rgba(255, 145, 0, 0.1);
}

/* 循环 */
tr[foreach]{
    outline: 2px dashed rgba(255, 145, 0, 0.8);
    outline-offset: 2px;
}
tr[foreach]>:first-child{
    position: relative;
}
tr[foreach]>:first-child::before{
    content: 'for';
    background-color: rgba(255, 145, 0, 0.8);
    position: absolute;
    top: -3px;
    left: -3px;
    cursor: default;
    line-height: 1em;
    padding: 2px;
    color: white;
    font-size: 12px;
}


/** 单元格合并 */
td[merge-left],td[merge-top],td[merge-right],td[merge-right]{
    position: relative;
}
td[merge-left]::after, td[merge-top]::after, td[merge-right]::after, td[merge-right]::after{
    content: 'M';
    background-color: rgba(255, 145, 0, 0.8);
    position: absolute;
    right: 0;
    bottom: 0;
    cursor: default;
    line-height: 1em;
    padding: 1px;
    color: white;
    font-size: 12px;
}