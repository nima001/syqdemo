<template>
  <a-config-provider :locale="locale">
    <div id="app">
      <router-view />
      <a-modal v-if="logoutSrc"
        :visible="true"
        :width="300"
        :closable="false"
        :footer="null"
        :maskClosable="false"
        :keyboard="false"
        :bodyStyle="{padding: 0}"
      >
        <div style="height:60px;line-height: 60px;text-align: center;margin-top: 100px;font-size:16px;">
          <a-icon type="loading" style="margin-right:10px"/>正在登出，请稍后…
        </div>
        <iframe :src="logoutSrc" frameborder="0" scrolling="no" style="position: absolute;top: -9999px"/>
      </a-modal>
    </div>
  </a-config-provider>
</template>
<script>
import { ConfigProvider, Modal, Icon } from "ant-design-vue";
import zhCN from "ant-design-vue/lib/locale-provider/zh_CN";
import Bus from '@/framework/utils/EventBus'

export default {
  data() {
    return {
      locale: zhCN,
      exiting: false,
      logoutSrc: undefined,
    };
  },
  components: {
    AConfigProvider: ConfigProvider,
    AModal: Modal,
    AIcon: Icon,
  },
  created(){
    this.$store.dispatch('loadConfig', true).then((config) => {
      console.log('配置加载成功');
    });
    Bus.$on('logout', this.exit);
  },
  methods:{
    exit(message) {
      if(this.exiting){
        return
      }
      this.exiting = true;
      Bus.$emit('beforeLogout');
      if (message) {
        this.$modal.info({
          title: '提示',
          content: message,
          okText: '确定',
          keyboard: false,
          onOk: () => {
            this.logoutSrc = this.$router.resolve('/login/exit').href;
          },
        });
      } else {
        if (process.env.VUE_APP_PROJECT_NAME === 'person') {
          this.logoutSrc = this.$router.resolve('/login/exit').href;
        } else {
          this.logoutSrc = this.$router.resolve('/login/exit/zfw').href;
        }
      }
    },
  }
};
</script>
