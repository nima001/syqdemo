<template>
  <div class="form-panel">
    <div class="top">
      <div class="left">
        <div class="title">近五年预计退休人数预测</div>
        <a-spin :spinning="loading" class="chart">
          <area-chart :dataTable="chartData"></area-chart>
        </a-spin>
      </div>
      <div class="center">
        <div class="center_con">
          <div class="tip">未及时办理退休</div>
          <div class="num">
            <span>{{errorNum}}</span>
            <span>人</span>
          </div>
        </div>
      </div>
      <div class="right">
        <div class="title">
          <span>未及时办理退休人员明细</span>
          <span>
            <a-icon v-show="!loading" @click="showModal" :rotate="90" type="more" />
          </span>
        </div>
        <div class="bottom_table">
          <a-table
            row-key="_id"
            :loading="loading"
            :columns="retirecolumns"
            :dataSource="retiredata"
            :pagination="false"
            >
          </a-table>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="title">序列退休人员分布明细表</div>
      <div class="bottom_table">
        <a-table
          :row-key="(record,index) => index"
          :loading="loading"
          :columns="columns"
          :dataSource="dataSource"
          :pagination="false"
          >
        </a-table>
      </div>
    </div>
    <a-modal
      title="未及时办理退休人员明细"
      :width="800"
      :visible="visible"
      :footer="null"
      @cancel="handleCancel"
    >
      <a-table
        row-key="_id"
        :loading="retireModalLoading"
        :columns="retirecolumns"
        :dataSource="retireModalData"
        :pagination="false"
        :scroll="{ y: 350 }"
      />
      <a-pagination
        v-if="retireModalData.length"
        showSizeChanger
        :total="pagination.total"
        :pageSize="pagination.pagesize"
        :current="pagination.pagenum"
        :showTotal="(total) => `总共：${total}条`"
        @change="onChange"
        @showSizeChange="onShowSizeChange"
      />
    </a-modal>
  </div>
</template>
<script>
import { Table, Spin, Icon, Modal, Pagination } from "ant-design-vue";
import { components } from '@person/components/chart'
import { assign, groupBy } from 'lodash';
import { orgRetireReport, orgRetireErrorReport, RetireSystypeReport } from '@/person-shaoxing/api/orgStaffReport'
import { aggregateQuery } from '@/person/api/chart'
import { getNowFormatDate } from "@/person-shaoxing/utils/index";
import { showError } from '@framework/utils'
const year = new Date().getFullYear();
/**
 * 退休人数监测
 */
export default {
  name: 'RetireReport',
  components: {
    ATable: Table,
    ASpin: Spin,
    AIcon: Icon,
    AModal: Modal,
    APagination: Pagination,
    ...components
  },
  props: {
    district: {
      type: String,
    }
  },
  data(){
    return {
      loading: false,
      errorNum: 0,
      chartData: undefined,
      retirecolumns: [
        { title: '人员姓名', dataIndex: 'username' },
        { title: '单位名称', dataIndex: 'org' },
        { title: '应退休时间', dataIndex: '_join0.yjtxsj' },],
      columns: [
        { title: '序列', dataIndex: 'name', width: '20%' },
        { title: '本年度', dataIndex: year, width: '16%' },
        { title: year + 1, dataIndex: year + 1, width: '16%'  },
        { title: year + 2, dataIndex: year + 2, width: '16%' },
        { title: year + 3, dataIndex: year + 3, width: '16%' },
        { title: year + 4, dataIndex: year + 4, width: '16%' },
      ],
      visible: false,
      retiredata: [],//未及时办理退休人员明细--表格数据
      retireModalData: [],//未及时办理退休人员明细--弹窗表格数据
      retireModalLoading: false,//弹窗加载状态
      dataSource: [],
      pagination: {
        total: 0,
        pagenum: 1,
        pagesize: 10,
        needtotal: true,
      }
    }
  },
  computed: {},
  watch: {
    district(district) {
      this.loadData(district);
    }
  },
  created(){
    this.loadData(this.district);
  },
  mounted() {},
  methods: {
    onChange(pagenum, pagesize) {
      assign(this.pagination,{ pagenum, pagesize});
      this.orgRetireError();
    },
    onShowSizeChange(current,pagesize){
      assign(this.pagination,{ pagenum: 1, pagesize});
      this.orgRetireError();
    },
    handleCancel() {
      this.visible = false;
      this.retireModalData = [];
    },
    showModal() {
      this.pagination.pagenum = 1;
      this.pagination.pagesize = 10;
      this.orgRetireError();
      this.visible = true;
    },
    orgRetireError() {
      this.retireModalLoading = true;
      orgRetireErrorReport({district: this.district,...this.pagination}).then((res)=>{
        this.retireModalData = res.result.rows;
        this.pagination.total = res.result.total;
      }).catch((err)=>{
        showError(err);
      }).finally(()=>{
        this.retireModalLoading = false;
      })
    },
    loadData(district) {
      this.loading = true;
      let params = this.getParams(district);
      Promise.all([
        orgRetireReport(district)
          .then(({result}) => result).catch(err => Promise.resolve({})),
        orgRetireErrorReport({district: district,needtotal: true})
          .then(({result}) => result).catch(err => Promise.resolve(0)),
        aggregateQuery(params)
          .then(({result}) => result).catch(err => Promise.resolve({})),
        RetireSystypeReport(district)
          .then(({result}) => result).catch(err => Promise.resolve({})),
      ])
      .then(([chartData, errorNum, tabData, systypeData]) => {
        let arr = [], obj = {}, num = 0;
        this.chartData = chartData;
        this.chartData.keyCols[0].showname = ' ';
        this.errorNum = errorNum.total;
        this.retiredata = errorNum.rows.slice(0,5);
        // tabData.data.rows.map(item => {
        //   num ++;
        //   if (num < 5) {
        //     obj[item.k1] = item.v0;
        //   } else {
        //     // obj[item.k1] = item.v0;
        //     // obj.name = item.k0;
        //     // arr.push(obj);
        //     // obj = {};
        //     // num = 0;
        //   }
        // })
        let data = groupBy(systypeData.rows,'k1');
        let keys = Object.keys(data);
        keys.forEach((item)=>{
          obj.name = item;
          data[item].forEach((dataItem)=>{
            obj[dataItem.k0] = dataItem.v0;
          });
          arr.push(obj);
          obj = {};
        });
        this.dataSource = arr;
      })
      .catch(err => { showError(err); })
      .finally(() => { this.loading = false; })
    },
    getParams(district) {
      let year = new Date().getFullYear();
      let day = getNowFormatDate();
      let arr = day.split('-');
      let nextDay = (year + 4) + '-' + arr[1] + '-' + arr[2];
      let params = {
        query:{
          fields:[
            {
              key:"username",
              showname:"姓名",
            },
            {
              key:"_id@user.statistic.yjtxsj",
              showname:"预计退休时间",
            },
            {
              key:"org@organization.district",
              showname:"所在部门-所在地区",
            },
            {
              key:"org@organization.systype",
              showname:"所在部门-系统类别",
            }
          ],
          filter:{
            criteria:[
              {
                field:{
                  key:"org@organization.district",
                  showname:"所在部门-所在地区",
                },
                op:"eq",
                value: district
              },
              {
                field:{
                  key:"_id@user.statistic.yjtxsj",
                  showname:"预计退休时间",
                },
                op:"gt",
                value: day
              },
              {
                field:{
                  key:"_id@user.statistic.yjtxsj",
                  showname:"预计退休时间",
                },
                op:"lt",
                value: nextDay
              }
            ],
            op:"and"
          },
          id:2950,
          namespace:"report.chart",
          needtotal:false,
          nodeid:0,
          owner:true,
          pagenum:1,
          pagesize:10,
          pub:0,
          simple:false,
          target:{
            catalogid:50,
            id:2,
            model:"user",
            title:"人员"
          },
          title:"111"
      },
      groupby:{
        fields:[
          {
            showname:"记录数",
            type:"count",
            id:"yqvsow"
          }
        ],
        with:[
            {
              key:"org@organization.systype",
              showname:"所在部门-系统类别",
              type:"value",
              id:"nxtjsm"
            },
            {
              dateformat:"yyyy",
              filters:[
                year,
                year + 4
              ],
              key:"_id@user.statistic.yjtxsj",
              showname:"预计退休时间",
              type:"date",
              id:"ydekyz"
            }
          ]
        }
      };
      return params;
    }
  }
}
</script>
<style lang="less" scoped>
.form-panel{
  .top{
    display: flex;
    padding-bottom: @padding-lg;
    justify-content: space-between;
    > div{
      .title{
        font-weight: bold;
        line-height: 30px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        span:last-child {
          display: inline-block;
          height: 0;
          i.anticon-more {
            color: @primary-color;
            font-size: 30px;
            cursor: pointer;
          }
        }
      }
    }
    .left{
      width: 550px;
      .ant-spin-nested-loading{
        height: 270px;
      }
    }
    .center{
      width: 176px;
      .center_con{
        margin-top: 51px;
        height: 267px;
        background-image: url('../../../assets/img/report_retire.png');
        background-size: cover;
        border-radius: 5px;
        color: #fff;
        .tip{
          text-align: center;
          font-size: 20px;
          line-height: 72px;
        }
        .num{
          text-indent: 2em;
          span{
            &:nth-child(1){
              font-size: 40px;
            }
          }
        }
      }
    }
    .right{
      width: 580px;
    }
  }
  .bottom{
    margin-top: @padding-lg;
    .title{
      font-weight: bold;
      line-height: 30px;
      margin-bottom: 10px;
    }
  }
}
/deep/.ant-modal-body {
  height: 480px;
  .ant-pagination {
    float: right;
    margin-top: 10px;
  }
}
</style>