<template>
  <Input v-model="inputValue" :allowClear="allowClear"/>  
</template>
<script>
import {Input} from 'ant-design-vue'
import { connect, mapProps, observer, useForm, useField, useFieldSchema } from '@formily/vue'

export default {
  components: {
    Input,
  },
  props: {
    value: {},
    allowClear: Boolean,
  },
  setup(){
    return {
      _formComponentType: 'widget',
      form: useForm(),
      schema: useFieldSchema(),
    }
  },
  data(){
    return {
      inputValue: this.value
    }
  },
  watch: {
    inputValue(v){
      console.log(v);
      this.$emit('change', v);
    },
    value(v){
      this.inputValue = v;
    }
  }
}
</script>
