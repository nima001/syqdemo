.workflow{
    position: relative;
}

/*签章样式*/
.workflow .seal {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    position: absolute;
    right: 50px;
    top: -30px;
    z-index: 100;
}

.workflow .seal>img {
    width: 100%;
    height: 150px;
}

.workflow .stampNotice {
    margin: 0;
    padding: 0;
    position: absolute;
    right: 40px;
    top: 2px;
}

/*审批意见样式*/
.optionsWrap {
    background: #fff;
    padding: 10px;
    border-radius: 5px;
}

.workflow .stampBottom {
    text-align: right;
}

/*组件宽度样式*/
.workflow .hand {
    width: 100%;
}