import Vue from 'vue'
import Router from 'vue-router'
import Layout from '../views/Layout'
Vue.use(Router)

/* Router Modules */

export default new Router({
  mode: 'history',
  base: process.env.BASE_URL,
  routes: [
    {
      path: '/formdesign',
      component: Layout,
      meta: { title: '表单设计器' },
      children: [
        {
          path: 'display',
          component: () => import('../views/demoDisplay'),
          name: 'demoDisplay'
        },
        {
            path: 'design',
            component: () => import('../views/FormDesign'),
            name: 'demoDisplay'
          }
      ]
    }
  ]
})
