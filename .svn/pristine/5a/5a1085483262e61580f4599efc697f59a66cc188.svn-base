
import Layout from '@/framework/views/Layout';

//  统计报表
export const countchart = {
	path: '/person/countchart',
	component: Layout,
	redirect: '/person/countchart/index',
	name: 'CountChart',
	meta: { auth: true, title: '统计报表' },
	children: [
		{
			path: 'index',
			component: () => import('../../views/statistics/booklet/index'),
			name: 'bookletIndex',
			meta: {
				auth: 'login',
				path: [{ name: '统计报表', path: '/person/countchart/index' }]
			}
		},
		{
			path: 'catalogue',
			component: () => import('../../views/statistics/booklet/Catalogue'),
			name: 'Catalogue',
			meta: {
				auth: 'login',
				path: [{ name: '统计报表', path: '/person/countchart/index' }, { name: '报表目录', path: '/person/countchart/catalogue' }]
			}
		},
		{
			path: 'sheetdetail',
			component: () => import('../../views/statistics/booklet/SheetDetail'),
			name: 'SheetDetail',
			meta: {
				auth: 'login',
				path: [{ name: '统计报表', path: '/person/countchart/index' }, { name: '报表详情', path: '/person/countchart/sheetdetail' }]
			}
		}
	]
}

