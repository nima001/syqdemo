<template>
  <div class="group">
    <span class="name">{{target.name}}</span>
    <ul class="chart">
      <li class="capsule">
        <div class="cell">
          <!-- <capsule-chart :showNum="target.dzjg" :maxNum="maxNum"></capsule-chart> -->
          <a-progress :percent="dz_percent" :show-info="false"></a-progress>
        </div>
        <div class="num">{{target.dzjg}}</div>
      </li>
      <li class="capsule">
        <div class="cell accent">
          <!-- <capsule-chart :showNum="target.sydw" :maxNum="maxNum" :accent="true"></capsule-chart> -->
          <a-progress :percent="sy_percent" :show-info="false"></a-progress>
        </div>
        <div class="num">{{target.sydw}}</div>
      </li>
    </ul>
  </div>
</template>

<script>
import CapsuleChart from "./CapsuleChart";
import { Progress } from "ant-design-vue";
export default {
  components: {
    CapsuleChart,
    AProgress: Progress
  },
  props: {
    //展示值
    target: {
      type: Object,
      required: true
    },
    maxNum: {
      type: Number,
      required: true
    }
  },
  computed:{
    dz_percent(){
      return Math.floor(this.target.dzjg/this.maxNum*100)
    },
    sy_percent(){
      return Math.floor(this.target.sydw/this.maxNum*100)
    }
  },
};
</script>
<style lang='less' scoped>
.group {
  display: flex;
  align-items: center;
  .name {
    width: 32px;
    height: 21px;
    font-size: 16px;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 21px;
    color: #ffffff;
    opacity: 0.6;
  }
  .chart {
    margin-left: 25px;
    margin-bottom: 0px;
    flex: 1;
    .capsule {
      display: flex;
      margin-top: 2px;
      &:first-child {
        margin-top: 0px;
      }
      .cell {
        display: flex;
        flex: 1;
        align-items: center;
        /deep/.ant-progress-inner {
          height: 8px;
          background: #343434;
        }
        /deep/.ant-progress-outer{
          display: flex;
        }
        /deep/.ant-progress-bg {
          border: 1px solid rgba(0, 0, 0, 0);
          background: linear-gradient(
            270deg,
            #8fd2ff 0%,
            rgba(87, 140, 246, 0.66) 49%,
            #5d4ef4 100%
          );
          opacity: 1;
          border-radius: 8px;
        }
        &.accent {
          /deep/.ant-progress-bg {
            border: 1px solid rgba(0, 0, 0, 0);
            background: linear-gradient(
              270deg,
              #fcb75b 0%,
              rgba(240, 150, 81, 0.66) 49%,
              #f26e52 100%
            );
            opacity: 1;
            border-radius: 8px;
          }
        }
      }
      .num {
        width: 58px;
        height: 18px;
        font-size: 16px;
        font-family: Arial;
        font-weight: 400;
        line-height: 18px;
        color: #ffffff;
        opacity: 0.6;
        text-align: right;
      }
    }
  }
}
</style>