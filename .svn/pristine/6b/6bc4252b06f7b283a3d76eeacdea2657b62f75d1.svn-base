  </div>
</template>
<script>
import { Modal, Button, Icon } from "ant-design-vue";

//对话框
export default {
  components: {
    AModal: Modal,
    AButton: Button,
    AIcon: Icon,
  },
  props: {
    value: Boolean,
    title: String,
    destroyOnClose: Boolean,
  },
  methods: {
    onCancel(){
      this.$emit('input', false);
    },
  }
}
</script>
