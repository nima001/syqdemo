<template>
  <div class="container">
    <a-input-group compact>
      <a-select v-model="input.type" :showArrow="false">
        <a-select-option value="">值</a-select-option>
        <a-select-option value="$"><custom-icon type="fx"/></a-select-option>
        <a-select-option value="#"><custom-icon color="#f39c2b" type="fx"/></a-select-option>
      </a-select>
      <template v-if="input.type">
        <a-input :value="value"
          read-only
          @click="showExprEditor = true"
        />
      </template>
      <a-date-picker v-else class="input-value"
        v-model="input.value"
        placeholder="(空)"
      />
    </a-input-group>
    <equation-editor v-if="showExprEditor" :selfFields='context' :fnData="input.value" namespace="query" @finish="onFinish"/>
  </div>
</template>
<script>
import { DatePicker, Modal, Icon, Input, Select } from "ant-design-vue";
import CustomIcon from "@/framework/components/CustomIcon";
import moment from "moment";

//时间 
export default {
  name: "DateValue",
  components: {
    AInput: Input,
    AInputGroup: Input.Group,
    ASelect: Select,
    ASelectOption: Select.Option,
    CustomIcon,
    AModal: Modal,
    ADatePicker: DatePicker,
    AIcon: Icon,
    EquationEditor:() => import('@person/components/EquationEditor/index')
  },
  props: {
    position: {
      type: String,
      required: true
    },
    defaultData: {
      required: true
    }
  },
  data() {
    return {
      input: this.initInput(this.defaultData.value),
      oldValue: undefined,
      showExprEditor: false,
    };
  },
  inject:['context'],
  computed:{
    value(){
      let {type, value} = this.input;
      if(type && value){
        return type + '{' + value + '}';;
      }else{
        return value && moment(value).format("YYYY-MM-DD");
      }
    }
  },
  watch: {
    'input.type'(vt, ovt){
      if(!ovt != !vt){
        let v = this.oldValue;
        this.oldValue = this.input.value;
        this.input.value = v;
      }
    },
    value(value){
      this.$store.commit({
        type: "SET_VALUE",
        position: this.position,
        value
      });
    },
  },
  methods: {
    onFinish(type, data) {
      this.showExprEditor = false;
      if (type == "ok") {
        this.input.value = data;
      }
    },
    initInput(v){
      if(typeof(v) == 'string'){
        if(v.startsWith('${') && v.endsWith('}')){
          return { type: '$', value: v.substring(2, v.length-1) };
        }else if(v.startsWith('#{') && v.endsWith('}')){
          return { type: '#', value: v.substring(2, v.length-1) };
        }
      }
      return { type: '', value: v && moment(v)};
    }
  }
};
</script>
<style lang="less" scoped>
.container {
  width: 320px;
  .ant-input-group-compact{
    display: flex;
    .input-value{
      flex: auto;
      min-width: 1px;
    }
  }
}
</style>