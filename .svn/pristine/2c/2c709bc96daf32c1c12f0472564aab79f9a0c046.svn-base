<template>
  <a-form-item :label="name" :required="!!required" :validateStatus="validateStatus" :class="{editor:!editor}" >
    <a-tooltip placement="topLeft" :title="title">
      <a-textarea
        v-if="multiline"
        :autoSize="{ minRows: 4, maxRows: 12 }"
        v-model="propValue"
        :disabled="!!disabled"
      />
      <a-input v-else v-model="propValue" :disabled="!!disabled" />
    </a-tooltip>
  </a-form-item>
</template>
<script>
import { Form, Input } from "ant-design-vue";
import { mixins } from "@formdesign/views/mixin/index";
export default {
  title: "单行文本框/多行文本框",
  components: {
    AFormItem: Form.Item,
    AInput: Input,
    ATextarea: Input.TextArea
  },
  props: {
    multiline: {
      type: Boolean,
      default: () => {
        return false;
      }
    }
  },
  mixins: [mixins],
  computed: {
    title() {
      return this.validateStatus == "error" ? `请输入正确的${this.name}` : "";
    }
  }
};
</script>
<style lang="less" scoped>
.ant-form-item {
  margin-bottom: 0;
  &.editor{
    position: relative;
    &::before{
      position: absolute;
      left: 0px;
      top: 0px;
      content: '';
      width: 100%;
      height: 100%;
      display: block;
      cursor: not-allowed;
      z-index: 3;
    }
  }
}
</style>