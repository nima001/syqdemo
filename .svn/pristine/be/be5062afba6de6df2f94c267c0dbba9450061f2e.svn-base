
/**
 * 账号管理模块路由
 */
import Layout from '../../views/Layout'

export const accountRoutes = {
    path: '/idm/account',
    component: Layout,
    children: [
        {
            path: '',
            component: () => import('../../views/account/index'),
            name: 'accountIndex',
            redirect: 'index',
            children: [
                {
                    path: 'index',
                    component: () => import('../../views/account/Main'),
                    name: 'accountMain',
                    meta: {
                        access: 'login',
                        path: [ { name: '账号管理', path: '/idm/account' }]
                    }
                },
                {
                    path: 'info',
                    component: () => import('../../views/account/AccountInfo'),
                    name: 'accountInfo',
                    meta: {
                        access: 'login',
                        path: [ { name: '用户信息', path: '/idm/account/info' }]
                    }
                },
            ]
        }
    ]
}
