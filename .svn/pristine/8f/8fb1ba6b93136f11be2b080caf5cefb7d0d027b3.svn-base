import request from '@/framework/utils/request'
import { method } from 'lodash'

/************************  分析管理接口 *************************/
//统计分析查询
export function anslyzequery(data) {
    return request({
        url: '/person/analyze/query',
        method: 'post',
        data
    })
}
//保存统计分析
export function anssave(data){
    return request({
        url: '/person/analyze',
        method: 'post',
        data
    })
}
//删除统计分析
export function deleteanslyze(id){
    return request({
        url: `/person/analyze/${id}`,
        method: 'delete',
        params:{
            id
        }
    })
}


