<template>
  <a-select @change="opChange"  :value="defaultData.op">
    <a-select-option
      :value="item.value"
      v-for="item in opList"
      :key="item.value"
    >{{item.text}}</a-select-option>
  </a-select>
</template>
<script>
import { showError } from "@/framework/utils/index";
import { Select } from "ant-design-vue";
export default {
  name: "OpSelect",
  props: {
    defaultData: {
      type: Object,
      required: true
    },
    position: {
      type: String,
      required: true
    },
    targetid: {
      type: Number,
      required: true
    }
  },
  components: {
    ASelect: Select,
    ASelectOption: Select.Option
  },
  computed: {
    opList() {
      return this.defaultData.opList;
    }
  },
  methods: {
    opChange(value) {
      this.$store.commit({
        type: "SET_OP",
        position: this.position,
        op: value
      });
    },
  }
};
</script>