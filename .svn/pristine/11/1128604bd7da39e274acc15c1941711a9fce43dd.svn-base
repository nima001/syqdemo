import Vue from 'vue'
import Router from 'vue-router'
import Layout from '../views/Layout'

Vue.use(Router)

/* Router Modules */
export default new Router({
  mode: 'history',
  base: process.env.BASE_URL,
  routes: [
    {
      path: '/',
      name: 'Root',
      redirect: '/main',
    },
    {
      path: '/main',
      name: 'Main',
      redirect: '/main/home',
      component: Layout,
      children: [
        {
          path: 'home',
          name: 'Home',
          component: () => import('../views/home/index'),
          meta: {
            auth: 'login'
          }
        },
        {
          path: 'message',
          name: 'Message',
          component: () => import('../views/home/message'),
          meta: { 
            auth: 'login',
            path: [{ name: "首页", path: '/main/home' }, { name: '消息中心', path: '/main/message' }] 
          }
        },
        {
          path: 'menu',
          name: 'MenuList',
          component: () => import('../views/menu/index'),
          meta: {
            auth: 'login',
          }
        },
        {
          path: 'menu/:id',
          name: 'SubMenu',
          component: () => import('../views/menu/SubMenu'),
          meta: {
            auth: 'login',
          }
        },
      ]
    },
    {
      path: '/error/404',
      component: () => import('../views/error/404'),
      meta: { title: '404' }
    },
    {
      path: '*',
      component: () => import('../views/error/404'),
      meta: { title: '404' }
    }
  ]
});