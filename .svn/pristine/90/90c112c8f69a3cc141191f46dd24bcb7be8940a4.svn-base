<template>
  <div class="proportion" :class="status">
    <a-progress
      type="circle"
      :percent="percent"
      :strokeColor="primary-color"
      :format="() => '问题类型'"
    />
    <div class="footer">
      <div class="top">
        <span class="text">外部问题</span>
        <span class="num">{{ outsideNum ? outsideNum : 0 }}</span>
      </div>
      <div class="bottom">
        <span class="text">内部问题</span>
        <span class="num">{{ insideNum ? insideNum : 0 }}</span>
      </div>
    </div>
  </div>
</template>
<script>
import { Progress } from "ant-design-vue";

/**
 * 占比显示
 */
export default {
  components: {
    AProgress: Progress,
  },
  props: {
    outsideNum: Number,
    insideNum: Number,
    cardtype: {
      type: String,
      default: "card",
    },
    
    numText: String,
    overNum: Number,
    surplusText: String,
  },
  computed: {
    percent() {
      // console.log(this.num, this.total)
      if (this.outsideNum > 0 && this.insideNum > 0) {
        return (this.insideNum / (this.outsideNum + this.insideNum)) * 100;
      }
    },
    surplus() {
      return (this.total || 0) - (this.num || 0);
    },
    status() {
      let status = "";
      let total = this.total ? this.total : 0;
      let num = this.num ? this.num : 0;

      if (total - num < 0) {
        return (status = "error");
      } else {
        if (total <= 0) return status;
        let res = total * 0.99;
        if (num < res) {
          return (status = "normal");
        } else {
          return (status = "warn");
        }
      }
    },
  },
};
</script>
<style lang="less" scoped>
.proportion {
  min-height: 212px;
  text-align: left;
  display: flex;
  border-radius: 5px;
  border: 1px solid #e8e8e8;
  border-radius: 5px;
  justify-content: center;
  align-items: center;
  /deep/ .ant-progress-circle-path {
    stroke: lighten(@primary-color, 20%) !important;
  }
  /deep/ .ant-progress-circle-trail {
    stroke: @primary-color !important;
  }


  .progress {
    line-height: 1.6em;
    .text {
      color: @text-color;
    }
    .num {
      color: @primary-color;
      font-size: 1.5em;
      font-weight: bold;
      transition: color 0.3s ease 0s;
    }
  }

  .footer {
    margin-left: 35px;
    .top {
      height: 45px;
      line-height: 45px;
      & .text::before {
        color: lighten(@primary-color, 20%);
      }
    }

    .bottom {
      height: 45px;
      line-height: 45px;
    }

    .text {
      display: inline-block;
      line-height: 25px;
      height: 25px;
      &::before {
        content: "●";
        font-size: 25px;
        margin-right: 4px;
        color: @primary-color;
      }
    }
    .num {
      margin-left: 20px;
      font-size: 25px;
      font-weight: bold;
    }
  }
}
</style>