import request from '@/framework/utils/request'


/*
**---------------- 监控策略 ----------------
*/

// 监控策略列表
export function listMonitorStrategy (data) {
  return request({
    url: '/person/v1/monitorstrategy/list',
    method: 'post',
    data
  })
}
// 获取监控策略
export function getMonitorStrategy (id) {
  return request({
    url: `/person/v1/monitorstrategy/get/${id}`,
    method: 'get'
  })
}
// 添加监控策略
export function addMonitorStrategy (data) {
  return request({
    url: '/person/v1/monitorstrategy/add',
    method: 'post',
    data
  })
}
// 更新监控策略
export function updateMonitorStrategy (data) {
  return request({
    url: '/person/v1/monitorstrategy/update',
    method: 'put',
    data
  })
}
// 删除监控策略
export function deleteMonitorStrategy (id) {
  return request({
    url: `/person/v1/monitorstrategy/delete/${id}`,
    method: 'delete'
  })
}
//执行监控策略
export function executeStrategy (id,sendmsg) {
  return request({
    url: `/person/v1/monitorstrategy/excutenow/${id}`,
    method: 'get',
    params:sendmsg
  })
}
//启用或停用策略
export function openOrStopStrategy (id,runstatus) {
  return request({
    url: `/person/v1/monitorstrategy/updatestatus?id=`+id+"&runstatus="+runstatus,
    method: 'put'
  })
}
// 获取预设或接口集合
export function presetStrategyInfo (strategyvalue) {
  return request({
    url: `/person/v1/monitorstrategy/presetstrategyinfo`,
    method: 'get',
    params: strategyvalue
  })
}

//对象属性列表
export function listModelFields(model){
  return request({
    url: `/person/v1/monitorstrategy/listmodelfields/${model}`,
    method: 'get'
  })
}