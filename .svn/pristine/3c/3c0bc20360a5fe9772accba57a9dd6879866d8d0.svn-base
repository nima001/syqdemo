<template>
  <div class="container">
    <div class="start">
      <a-input-group compact>
        <a-select :value="input[0].type" style="width:42px;" :showArrow="false" @change="onInputTypeChange(0, $event)">
          <a-select-option value="">值</a-select-option>
          <a-select-option value="$"><icon-font type="fx"/></a-select-option>
          <a-select-option value="#"><icon-font color="#f39c2b" type="fx"/></a-select-option>
        </a-select>
        <template v-if="input[0].type">
          <a-input :value="value[0]"
            read-only
            @click="showExpr(0)"
            style="width:calc(100% - 42px)"
          />
        </template>
        <a-date-picker v-else
          v-model="input[0].value"
          placeholder="起始时间"
          style="width:calc(100% - 42px)"
        />
      </a-input-group>
    </div>
    <div class="connector">~</div>
    <div class="end">
      <a-input-group compact>
        <a-select :value="input[1].type" style="width:42px;" :showArrow="false" @change="onInputTypeChange(1, $event)">
          <a-select-option value="">值</a-select-option>
          <a-select-option value="$"><icon-font type="fx"/></a-select-option>
          <a-select-option value="#"><icon-font color="#f39c2b" type="fx"/></a-select-option>
        </a-select>
        <template v-if="input[1].type">
          <a-input :value="value[1]"
            read-only
            @click="showExpr(1)"
            style="width:calc(100% - 42px)"
          />
        </template>
        <a-date-picker v-else
          v-model="input[1].value"
          placeholder="结束时间"
          style="width:calc(100% - 42px)"
        />
      </a-input-group>
    </div>
    <equation-editor v-if="showExprEditor" :selfFields='context' :fnData="optInput && optInput.value" namespace="query" @finish="onFinish"/>
  </div>
</template>
<script>
import { DatePicker, Modal, Icon, Input, Select } from "ant-design-vue";
import IconFont from "@/framework/components/IconFont";
import moment from "moment";

//时间介于
export default {
  name: "DateBetween",
  components: {
    AInput: Input,
    AInputGroup: Input.Group,
    ASelect: Select,
    ASelectOption: Select.Option,
    IconFont,
    AModal: Modal,
    ADatePicker: DatePicker,
    AIcon: Icon,
    EquationEditor:() => import('@person/components/EquationEditor/index')
  },
  props: {
    position: {
      type: String,
      required: true
    },
    defaultData: {
      type: Object,
      required: true
    }
  },
  data() {
    return {
      input: this.initInput(this.defaultData.value),
      oldValue: [],
      showExprEditor: false,
      optInput: undefined,
    };
  },
  inject:['context'],
  computed:{
    value(){
      return this.input.map(item => {
        let { type, value } = item;
        if(type && value){
          return type + '{' + value + '}';;
        }else{
          return value && moment(value).format("YYYY-MM-DD");
        }
      });
    }
  },
  watch: {
    value(value){
      this.$store.commit({
        type: "SET_VALUE",
        position: this.position,
        value
      });
    },
  },
  methods: {
    initInput(v){
      if(Array.isArray(v)){
        return [this.getInput(v[0]), this.getInput(v[1])];
      }else{
        return [this.getInput(v), this.getInput()];
      }
    },
    onInputTypeChange(index, type){
      let input = this.input[index];
      if(!input.type != !type){
        let v = this.oldValue[index];
        this.oldValue[index] = input.value;
        input.value = v;
      }
      input.type = type;
    },
    showExpr(index){
      this.showExprEditor = true;
      this.optInput = this.input[index];
    },
    onFinish(type, data) {
      this.showExprEditor = false;
      if (type == "ok") {
        this.optInput.value = data;
      }
    },
    getInput(v){
      if(typeof(v) == 'string'){
        if(v.startsWith('${') && v.endsWith('}')){
          return { type: '$', value: v.substring(2, v.length-1) };
        }else if(v.startsWith('#{') && v.endsWith('}')){
          return { type: '#', value: v.substring(2, v.length-1) };
        }
      }
      return { type: '', value: v && moment(v)};
    }
  }
};
</script>
<style lang="less" scoped>
.container {
  width: 420px;
  position: relative;
  .start{
    float: left;
    width: 50%;
    padding-right: 10px;
  }
  .connector{
    position: absolute;
    left: 50%;
    width: 20px;
    text-align: center;
    margin-left: -10px;
    line-height: 32px;
  }
  .end{
    float: left;
    width: 50%;
    padding-left: 10px;
  }
}
</style>    