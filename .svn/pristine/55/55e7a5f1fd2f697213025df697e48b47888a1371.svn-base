<template>
  <a-form-item v-if="formLayout != 'horizontal'" :label="name" :required="!!required" :validateStatus="validateStatus" :class="{editor:!editor}" >
    <a-tooltip placement="topLeft" :title="help">
      <a-date-picker :style="{width:'100%'}" v-model="propValue" :disabled="!!disabled" :title="propValue"></a-date-picker>
    </a-tooltip>
  </a-form-item>
  <a-form-item v-else  :required="!!required" :validateStatus="validateStatus" :class="{editor:!editor}" >
    <div class="compact">
      <div class="title" :title="name" :class="{required}">{{name}}</div>
      <a-tooltip placement="topLeft" :title="help">
        <a-date-picker v-model="propValue" :disabled="!!disabled" :title="propValue"></a-date-picker>
      </a-tooltip>
    </div>
  </a-form-item>  
</template>
<script>
import moment from "moment";
import get from "lodash/get";
import set from "lodash/set";
import { Form, Input, DatePicker } from "ant-design-vue";
import { mixins } from "@formdesign/views/mixin/index";
export default {
  title: "日期选择",
  mixins: [mixins],
  components: {
    AFormItem: Form.Item,
    AInput: Input,
    ADatePicker: DatePicker
  },
  computed: {
    // 覆盖mixin中的 propValue
    propValue: {
      get() {
        let d = null;
        if (this.data) {
          d = get(this.data, this.code);
        } else {
          d = get(this.formData.data, this.code);
        }
        return d && moment(d);
      },
      set(value) {
        if (this.data) {
          set(this.data, this.code, value);
        } else {
          set(this.formData.data, this.code, value);
        }
      }
    }
  }
};
</script>
<style lang="less" scoped>
.ant-form-item {
  margin-bottom: 0;
  &.editor{
    position: relative;
    &::before{
      position: absolute;
      left: 0px;
      top: 0px;
      content: '';
      width: 100%;
      height: 100%;
      display: block;
      cursor: not-allowed;
      z-index: 3;
    }
  }
  .compact {
    display: flex;
    padding: 4px 0px;
    .title {
      min-width: 5em;
      max-width: 10em;
      text-align: left;
      box-sizing: content-box;
      padding: 0px 11px;
      height: 30px;
      line-height: 30px;
      color: rgba(0, 0, 0, 0.75);
      font-size: 14px;
      background-color: #fafafa;
      border: 1px solid #d9d9d9;
      border-radius: 4px;
      border-right: none;
      border-top-right-radius: 0px;
      border-bottom-right-radius: 0px;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      &.required{
        position: relative;
        &::before{
          display: inline-block;
          color:@primary-color;
          font-size: 14px;
          font-family: SimSun, sans-serif;
          line-height: 1;
          content: '*';
          position: absolute;
          left:2px;
          top: 50%;
          transform: translateY(-50%)
        }        
      }
    }
    /deep/ .ant-calendar-picker {
      flex: 1;
      /deep/ .ant-input{
        border-top-left-radius: 0px;
        border-bottom-left-radius: 0px;
      }
    }
  }    
}
</style>